<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ameghana.eventplanner.NavigationDrawer"
    tools:showIn="@layout/app_bar_navigation_drawer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#E0E0E0">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titleView"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="30dp"
                android:textAllCaps="true"

                 />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chiefGuestView"
                android:layout_below="@id/titleView"

                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"

                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/venueView"
                android:layout_below="@id/chiefGuestView"

                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dateView"
                android:layout_toRightOf="@id/venueView"
                android:layout_marginRight="20dp"

                android:layout_marginTop="112dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"

                />
        </RelativeLayout>












    </LinearLayout>
</LinearLayout>
